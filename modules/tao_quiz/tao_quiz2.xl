// ----------------------------------------------------------------------------
    canvas 1000, 1000,
        get_url_data quizz_url & "mouse_data.php?" & prez_code, "draw_mouse", ",", "\n"
    rectangle 0,0,1000,1000

quizz_draw_mouse Style:text ->
// ----------------------------------------------------------------------------
