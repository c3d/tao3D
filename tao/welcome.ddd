        no_refresh_on TimerEvent 
        rectangle 0, 0, 2 * window_width, 2 * window_height 
    refresh_on MouseMoveEvent 
    color 1, 1, 1, Alpha 
    rectangle 0, 0, 2 * window_width, 2 * window_height 

