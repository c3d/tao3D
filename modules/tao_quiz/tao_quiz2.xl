key "/" ->
    if quizz_phase = "question" then
        quizz_phase := "answer"
    else
        quizz_phase := "question"

openText -> "false"

quizz_index -> 0
quizz_set_url -> ""
quizz_state -> "setup"
quizz_phase -> "question"

