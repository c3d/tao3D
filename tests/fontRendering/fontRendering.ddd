    color colbg 
    line_color 0.505303, 0.873304, 0.678096, 1.0 
    rectangle x, y, 600, 240 
    color col 
    line_color "font" 
    text_box x, y, 600, 240, 
        text t 
        line_break 
        text lorem_ipsum 50 

